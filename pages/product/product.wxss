/* pages/product/product.wxss */

.searchInput{
  border-bottom: 1px solid rgba(120, 120, 120, 0.3);
  padding: 8px;
  margin-bottom: 4px;
}
.buttonGroup{
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  margin: 4px;
}
.picker{
  font-size: 14px;
  width: 60px;
  text-align: center;
  border: 1px solid rgba(120, 120, 120, 0.5);
  border-radius: 4px;
   padding: 4px;
}
.showImg{
  padding: 4px;
  border-radius: 4px;
}
.customSwitch{
  display: flex;
  border-radius: 4px;
}
.customSwitch view{
  padding: 4px;
}

.table-cell{
  border-top: 1px solid rgba(120, 120, 120, 0.3);
  
  display: flex;
  font-size: 12px;
}
.table-cell view{
  padding: 4px;
}
.state{
  border-radius: 4px;
  color: white;
  background: #00a854;
  float: left;
}
.img{
  width: 50px;
  height: 50px;
  float: left;
  margin: 4px;
}
#rmb{
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
}
#aud{
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
}

.name{
  width: 40%;
  border-left:1px solid rgba(120, 120, 120, 0.3); 
}
.weight{
  width: 10%;
  border-left:1px solid rgba(120, 120, 120, 0.3); 
}
.price{
  width: 40%;
  border-left:1px solid rgba(120, 120, 120, 0.3); 
}


