/* pages/me/me.wxss */

.meInfo {
  position: relative;
  width: 100%;
  height: 120px;
  text-align: center;
  color: #fff;
  background-color: #f8803d;
}

.meInfo:after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -20px;
  z-index: -1;
  content: ' ';
  height: 20px;
  width: 100%;
  border-radius: 0 0 50% 50%;
  background-color: #f8803d;
}

.cache {
  margin-top: 50px;
}

.name {
  font-size: 14px;
}

.iconWrap {
  position: relative;
}

.icon {
  margin-top: 20px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
}


.searchWrap{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.check{
  margin-left: 40px;
  font-size: 14px;
  color: #ff4d4f;
}
.search{
  width: 60px;
  height: 60px;
}
.search:active{
  opacity: 0.7;
}
.userLogin view{
  padding: 5px;
  margin-left: 20px;
  margin-right: 20px;
  text-align: center;
}
.content{
  font-size: 13px;
}

.old .title{
   background-color: #f8803d;
   color: white;
   border-top-left-radius: 4px;
  border-top-right-radius: 4px;
}
.old .content{
  color: rgba(0, 0, 0, 0.85);
  margin-bottom: 10px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  background: #f5f5f5;
  padding: 10px;
  border-bottom: 1px solid rgba(120,120, 120, 0.3);
  border-left:  1px solid rgba(120,120, 120, 0.3);
  border-right:1px solid rgba(120,120, 120, 0.3);
}

.old:active{
  opacity: 0.6;
}
.new{
  background: #00a854;
  border-radius: 4px;
  color: white;
}

.new:active{
  opacity: 0.6;
}
.logout{
  color: white;
  background: #f8803d;
   border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  margin-left: 40px;
  margin-right: 40px;
}
.out{
  margin-top: 60px;
}