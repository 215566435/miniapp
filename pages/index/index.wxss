/* pages/manifest/manifest.wxss */
@import './itemTable.wxss';



.normal.cell{
  border-top: 1px solid rgba(120, 120, 120, 0.3);
  padding: 4px;
}

page{
  padding-bottom: 77px;
}

.tab{
  position: fixed;
  bottom: 0px;
  width: 100%;
}

.function{
  display: flex;
  text-align: center;
}
.scan{
  background-color: #00a854;
}
.scan:active{
  background: #3dbd7d;

}
.request{
  background-color: #bd2636;
}
.request:active{
  background-color:#f46e65;
}
.pic{
  background-color: #0e77ca;
}
.pic:active{
  background-color: #49a9ee;
}

.function view{
  width: 100%;
  padding: 12px;
  color: #d9d9d9;
  font-size: 12px;
}
